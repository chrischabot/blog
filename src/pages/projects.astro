---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import ProjectCard from '../components/ProjectCard.astro';
import TerminalCard from '../components/TerminalCard.astro';

const projects = [
  {
    name: "anthropic-swift-sdk",
    description: "Swift should talk to Claude without ceremony. This package gives you a native, async/await-friendly client for the Anthropic API.",
    url: "https://github.com/chrischabot/anthropic-swift-sdk",
    language: "Swift",
    topics: ["anthropic", "sdk", "swift"]
  },
  {
    name: "interviewer",
    description: "Voice-first multi-agent interview app that draws forth expertise through conversation.",
    url: "https://github.com/chrischabot/interviewer",
    language: "Swift",
    topics: ["ai", "voice", "interview"]
  },
  {
    name: "CircadianLights",
    description: "A macOS menu bar app that teaches your smart lights to follow the sun.",
    url: "https://github.com/chrischabot/CircadianLights",
    language: "Swift",
    topics: ["macos", "smart-home", "circadian"]
  },
  {
    name: "notes-to-walrus-blog",
    description: "Publishes Apple Notes to a Walrus decentralized site.",
    url: "https://github.com/chrischabot/notes-to-walrus-blog",
    language: "Swift",
    topics: ["apple", "blog", "decentralized", "walrus", "sui"]
  },
  {
    name: "book-recommendation",
    description: "AI-powered book recommendation engine built with TypeScript.",
    url: "https://github.com/chrischabot/book-recommendation",
    language: "TypeScript",
    topics: ["ai", "books", "recommendations"]
  },
  {
    name: "ec-developer-dashboard",
    description: "Developer Metrics Dashboard that measures first touch to main net transactions done.",
    url: "https://github.com/chrischabot/ec-developer-dashboard",
    language: "TypeScript",
    topics: ["dashboard", "developer", "devrel", "kpis", "metrics"]
  },
  {
    name: "clean-contacts",
    description: "A surgical instrument for cleaning and deduplicating your Google and Apple contacts.",
    url: "https://github.com/chrischabot/clean-contacts",
    language: "TypeScript",
    topics: ["contacts", "google", "apple", "cleanup"]
  },
];
---

<BaseLayout title="Projects | Chris Chabot">
  <div class="min-h-screen flex flex-col">
    <Header />

    <main class="flex-1">
      <!-- Hero -->
      <section class="border-b border-border">
        <div class="max-w-6xl mx-auto px-4 sm:px-6 py-12">
          <div class="flex items-center gap-2 text-sm text-muted-foreground mb-4 font-mono">
            <span class="text-terminal-green">$</span>
            <span>ls -la ~/projects/</span>
          </div>
          <h1 class="text-3xl sm:text-4xl font-bold text-foreground mb-4">
            Open Source Projects
          </h1>
          <p class="text-lg text-muted-foreground max-w-3xl">
            A collection of fun hacks, tools, and experiments. These are personal projects
            built to scratch an itch, explore new technologies, or just for the joy of building.
          </p>
        </div>
      </section>

      <!-- Stats Terminal -->
      <section class="border-b border-border bg-card/30">
        <div class="max-w-6xl mx-auto px-4 sm:px-6 py-8">
          <TerminalCard title="bash" command="gh repo list chrischabot --limit 7 | wc -l">
            <div class="font-mono text-sm">
              <div class="flex items-center gap-4 flex-wrap">
                <div>
                  <span class="text-terminal-yellow text-2xl font-bold">{projects.length}</span>
                  <span class="text-muted-foreground ml-2">public repos</span>
                </div>
                <div class="text-muted-foreground">•</div>
                <div>
                  <span class="text-terminal-cyan">Languages:</span>
                  <span class="text-foreground ml-2">Swift, TypeScript</span>
                </div>
                <div class="text-muted-foreground">•</div>
                <div>
                  <span class="text-terminal-cyan">Focus:</span>
                  <span class="text-foreground ml-2">AI, Developer Tools, macOS</span>
                </div>
              </div>
            </div>
          </TerminalCard>
        </div>
      </section>

      <!-- Projects Grid -->
      <section class="border-b border-border">
        <div class="max-w-6xl mx-auto px-4 sm:px-6 py-12">
          <h2 class="text-lg font-semibold text-foreground mb-6 flex items-center gap-2">
            <span class="text-terminal-green">$</span>
            <span>find . -name "*.project" -type f</span>
          </h2>

          <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6">
            {projects.map((project) => (
              <ProjectCard
                name={project.name}
                description={project.description}
                url={project.url}
                language={project.language}
                topics={project.topics}
              />
            ))}
          </div>
        </div>
      </section>

      <!-- Open Source Contributions -->
      <section class="border-b border-border bg-card/30">
        <div class="max-w-6xl mx-auto px-4 sm:px-6 py-12">
          <h2 class="text-lg font-semibold text-foreground mb-6 flex items-center gap-2">
            <span class="text-terminal-green">$</span>
            <span>cat legacy_contributions.md</span>
          </h2>

          <div class="grid md:grid-cols-2 gap-6">
            <TerminalCard title="Apache Shindig" command="git log --author='chabot'">
              <div class="font-mono text-sm space-y-2">
                <div class="text-terminal-yellow">PHP OpenSocial Reference Implementation</div>
                <div class="text-muted-foreground text-xs">
                  Chief author of the PHP implementation of the OpenSocial specification.
                  PMC member and committer. Led development of versions 0.8, 0.8.1, and 0.9.
                </div>
                <div class="text-terminal-cyan text-xs mt-2">
                  → Used by 14 social networks serving 400M+ users
                </div>
              </div>
            </TerminalCard>

            <TerminalCard title="OpenSocial Spec" command="git shortlog -sn">
              <div class="font-mono text-sm space-y-2">
                <div class="text-terminal-yellow">W3C Social Web Standards</div>
                <div class="text-muted-foreground text-xs">
                  Co-authored the OpenSocial specification defining APIs for web-based
                  social applications. Drove collaboration with W3C foundation and IBM.
                </div>
                <div class="text-terminal-cyan text-xs mt-2">
                  → Spoke at 60+ conferences on open web standards
                </div>
              </div>
            </TerminalCard>
          </div>
        </div>
      </section>

      <!-- CTA -->
      <section>
        <div class="max-w-6xl mx-auto px-4 sm:px-6 py-12">
          <div class="text-center">
            <h2 class="text-xl font-semibold text-foreground mb-4">
              <span class="text-terminal-green">$</span> open https://github.com/chrischabot
            </h2>
            <p class="text-muted-foreground mb-6 max-w-lg mx-auto">
              Want to collaborate on a project or have an interesting idea?
              Check out my GitHub or reach out directly.
            </p>
            <a
              href="https://github.com/chrischabot"
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center gap-2 px-4 py-2 bg-terminal-green text-background rounded font-medium text-sm hover:bg-terminal-green/90 transition-colors"
            >
              <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor">
                <path d="M12 0C5.37 0 0 5.37 0 12c0 5.31 3.435 9.795 8.205 11.385.6.105.825-.255.825-.57 0-.285-.015-1.23-.015-2.235-3.015.555-3.795-.735-4.035-1.41-.135-.345-.72-1.41-1.23-1.695-.42-.225-1.02-.78-.015-.795.945-.015 1.62.87 1.845 1.23 1.08 1.815 2.805 1.305 3.495.99.105-.78.42-1.305.765-1.605-2.67-.3-5.46-1.335-5.46-5.925 0-1.305.465-2.385 1.23-3.225-.12-.3-.54-1.53.12-3.18 0 0 1.005-.315 3.3 1.23.96-.27 1.98-.405 3-.405s2.04.135 3 .405c2.295-1.56 3.3-1.23 3.3-1.23.66 1.65.24 2.88.12 3.18.765.84 1.23 1.905 1.23 3.225 0 4.605-2.805 5.625-5.475 5.925.435.375.81 1.095.81 2.22 0 1.605-.015 2.895-.015 3.3 0 .315.225.69.825.57A12.02 12.02 0 0024 12c0-6.63-5.37-12-12-12z"/>
              </svg>
              View GitHub Profile
            </a>
          </div>
        </div>
      </section>
    </main>

    <Footer />
  </div>
</BaseLayout>
