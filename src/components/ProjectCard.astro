---
interface Props {
  name: string;
  description: string;
  url: string;
  language?: string;
  topics?: string[];
}

const { name, description, url, language, topics = [] } = Astro.props;

const languageColors: Record<string, string> = {
  TypeScript: 'bg-terminal-blue',
  Swift: 'bg-orange-500',
  JavaScript: 'bg-terminal-yellow',
  Python: 'bg-terminal-green',
  Go: 'bg-terminal-cyan',
  Rust: 'bg-orange-600',
};

const langColor = language ? languageColors[language] || 'bg-terminal-purple' : 'bg-muted';
---

<a
  href={url}
  target="_blank"
  rel="noopener noreferrer"
  class="group block"
>
  <div class="h-full rounded-lg border border-border bg-card hover:border-terminal-green/50 hover:shadow-lg hover:shadow-terminal-green/5 transition-all duration-300 overflow-hidden">
    <!-- Git-style header -->
    <div class="flex items-center gap-2 px-4 py-2 bg-secondary/30 border-b border-border">
      <svg class="w-4 h-4 text-muted-foreground" viewBox="0 0 16 16" fill="currentColor">
        <path d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.013 8.013 0 0016 8c0-4.42-3.58-8-8-8z"/>
      </svg>
      <span class="text-xs text-muted-foreground font-mono">chrischabot/{name}</span>
      <span class="ml-auto text-terminal-green opacity-0 group-hover:opacity-100 transition-opacity">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
        </svg>
      </span>
    </div>

    <div class="p-6">
      <!-- Project name -->
      <h3 class="text-base font-semibold text-foreground group-hover:text-terminal-green transition-colors mb-2">
        {name}
      </h3>

      <!-- Description -->
      <p class="text-sm text-muted-foreground mb-4 line-clamp-3 min-h-[3.75rem]">
        {description}
      </p>

      <!-- Meta info -->
      <div class="flex items-center justify-between">
        {language && (
          <div class="flex items-center gap-2">
            <span class={`w-2.5 h-2.5 rounded-full ${langColor}`}></span>
            <span class="text-xs text-muted-foreground">{language}</span>
          </div>
        )}

        {topics.length > 0 && (
          <div class="flex gap-1.5">
            {topics.slice(0, 3).map((topic) => (
              <span class="text-xs px-1.5 py-0.5 bg-secondary rounded text-muted-foreground">
                {topic}
              </span>
            ))}
          </div>
        )}
      </div>
    </div>

    <!-- Clone command hint -->
    <div class="px-6 pb-5">
      <div class="text-xs text-muted-foreground font-mono truncate group-hover:text-terminal-green transition-colors">
        $ git clone github.com/chrischabot/{name}
      </div>
    </div>
  </div>
</a>
