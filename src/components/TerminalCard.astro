---
interface Props {
  title?: string;
  command?: string;
  class?: string;
}

const { title, command, class: className } = Astro.props;
---

<div class:list={["terminal-card rounded-lg border border-border bg-card overflow-hidden", className]}>
  <!-- Terminal title bar -->
  <div class="flex items-center gap-2 px-4 py-2 bg-secondary/50 border-b border-border">
    <div class="flex gap-1.5">
      <span class="w-3 h-3 rounded-full bg-terminal-red/80"></span>
      <span class="w-3 h-3 rounded-full bg-terminal-yellow/80"></span>
      <span class="w-3 h-3 rounded-full bg-terminal-green/80"></span>
    </div>
    {title && (
      <span class="text-xs text-muted-foreground ml-2">
        {title}
      </span>
    )}
    {command && (
      <span class="text-xs text-muted-foreground ml-auto font-mono">
        {command}
      </span>
    )}
  </div>

  <!-- Terminal content -->
  <div class="p-4">
    <slot />
  </div>
</div>
